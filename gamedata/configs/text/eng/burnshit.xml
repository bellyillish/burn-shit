  <string id="ui_mcm_menu_burnshit">
    <text>Burn Shit</text>
  </string>

  <string id="ui_mcm_burnshit_burnQuestItems">
    <text>Allow Burning of Quest Items</text>
  </string>

  <string id="ui_mcm_burnshit_burnQuestItems_desc">
    <text>Allow burning of items flagged with "quest_item = true". If you enable this, just be careful not to burn something you might need for a quest.</text>
  </string>

  <string id="ui_mcm_burnshit_burnUntradeables">
    <text>Allow Burning of Untradeable Items</text>
  </string>

  <string id="ui_mcm_burnshit_burnUntradeables_desc">
    <text>Allow burning of items flagged with "can_trade = false".</text>
  </string>

  <string id="ui_mcm_burnshit_override_note">
    <text>You can also force specific items to be burnable or not burnable by editing burnshit.script directly.</text>
  </string>

  <string id="ui_mcm_burnshit_showBurnAll">
    <text>Show "Burn All" Button</text>
  </string>

  <string id="ui_mcm_burnshit_showBurnAll_desc">
    <text>Choose to show a "burn all" context menu item always, never, or only when right clicking multiple-item stacks.</text>
  </string>

  <string id="ui_mcm_lst_burnshit_never">
    <text>Never</text>
  </string>

  <string id="ui_mcm_lst_burnshit_always">
    <text>Always</text>
  </string>

  <string id="ui_mcm_lst_burnshit_multiple">
    <text>Only for Multiple Items</text>
  </string>

  <string id="ui_mcm_burnshit_menuRange">
    <text>Menu Range (0 = disable)</text>
  </string>

  <string id="ui_mcm_burnshit_menuRange_desc">
    <text>Maximum distance in meters that you can be from a lit campfire for the burn menu options to appear.</text>
  </string>

  <string id="ui_mcm_burnshit_dragDropRange">
    <text>Drag and Drop Range (0 = disable)</text>
  </string>

  <string id="ui_mcm_burnshit_dragDropRange_desc">
    <text>The maximum distance in meters that you can be from a lit campfire to burn items via drag and drop.</text>
  </string>

  <string id="ui_mcm_burnshit_minVolume">
    <text>Base Volume</text>
  </string>

  <string id="ui_mcm_burnshit_minVolume_desc">
    <text>The volume of the burning sound when burning only one item.</text>
  </string>

  <string id="ui_mcm_burnshit_maxVolume">
    <text>Max Volume (0 = disable)</text>
  </string>

  <string id="ui_mcm_burnshit_maxVolume_desc">
    <text>The maximum volume of the burning sound when burning many items. Each item up to 10 adds to the base volume</text>
  </string>
